    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^9.17.0",
    "eslint-config-next": "15.1.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.3",
